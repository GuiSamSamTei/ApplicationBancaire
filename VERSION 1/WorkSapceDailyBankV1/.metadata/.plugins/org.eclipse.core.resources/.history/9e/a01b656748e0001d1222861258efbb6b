	public void setJeuMode(Stage fenetrePrincipale, boolean mode) {
		this.stageJeu = fenetrePrincipale;
		this.stageJeu.setOnCloseRequest(event -> {
			event.consume();
			actionQuitter();
		});
		this.jeuMemory = new Jeu(16, mode);
		this.valScore = 0;
	}

